<!-- Magento compatible wrapper for Apache log4php logging framework -->
<config>
    <sections>
        <dev translate="label" module="core">
            <groups>
                <log>
                    <fields>
                        <prxgt_log4php_config_file translate="label comment">
                            <label>Log4php Config File Name</label>
                            <comment>Path to configuration file related to Mage base directory (sample: var/log/log4php.cfg.xml)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </prxgt_log4php_config_file>
                    </fields>
                </log>
            </groups>
        </dev>
    </sections>
</config>