<!-- Magento compatible wrapper for Apache log4php logging framework -->
<config>
    <modules>
        <Praxigento_Log>
            <version>0.4.0</version>
        </Praxigento_Log>
    </modules>
    <adminhtml>
        <translate>
            <modules>
                <Praxigento_Log>
                    <files>
                        <default>Praxigento_Log.csv</default>
                    </files>
                </Praxigento_Log>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <dev>
            <log>
                <!--
                    Relative path to default logging configuration
                    Change it in:
                    "Adminhtml / System / Configuration / Developer / Log Settings / Log4php Config File Name"
                -->
                <prxgt_log4php_config_file>app/code/community/Praxigento/Log/etc/log4php.cfg.xml</prxgt_log4php_config_file>
            </log>
        </dev>
    </default>
</config>