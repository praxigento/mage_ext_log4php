<!-- Magento compatible wrapper for Apache log4php logging framework -->
<config>
    <modules>
        <Praxigento_Log>
            <version>0.4.0</version>
        </Praxigento_Log>
    </modules>
    <adminhtml>
        <translate>
            <modules>
                <Praxigento_Log>
                    <files>
                        <default>Praxigento_Log.csv</default>
                    </files>
                </Praxigento_Log>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <dev>
            <log>
                <!-- Relative path to default logging configuration -->
                <prxgt_log4php_config_file>app/etc/praxigento/log/log4php.cfg.xml</prxgt_log4php_config_file>
            </log>
        </dev>
    </default>
</config>